<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/journal/bootstrap.min.css">
    <title>ToDoList</title>
</head>
<body>
<div class="conainer">

        {% for msg in app.session.FlashBag.get('initialisation') %}
        <div class="alert alert-danger">
        {{ msg }}
         </div>
        {% endfor %}


        {% for msg in app.session.FlashBag.get('keytrouv√©') %}
           <div class="alert alert-danger">
            {{ msg }}
           </div>
        {% endfor %}

        {% for msg in app.session.FlashBag.get('success') %}
            <div class="alert alert-success">
            {{ msg }}
           </div>
        {% endfor %}

    {% for msg in app.session.FlashBag.get('updatesuccess') %}
        <div class="alert alert-success">
            {{ msg }}
        </div>
    {% endfor %}
    {% for msg in app.session.FlashBag.get('deletesuccess') %}
        <div class="alert alert-success">
            {{ msg | upper }}
            {{ "now" | date('d/m/Y')}}
        </div>
    {% endfor %}
    {% for msg in app.session.FlashBag.get('erreur') %}
        <div class="alert alert-danger">
            {{ msg }}
        </div>
    {% endfor %}
    <h1>ToDo Liste :</h1>
<ul class="list-group">
    {% for key,todo in app.session.get('todos') %}
    <li class="list-group-item">{{ key }} : {{ todo}}</li>
    {% endfor %}
</ul>
</div>
</body>
</html>